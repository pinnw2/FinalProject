<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StylePageWomen">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/womenStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please choose your favourite style."
            android:visibility="visible" />

        <Button
            android:id="@+id/businessFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="business" />

        <Button
            android:id="@+id/summerFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/summer_vacation" />

        <Button
            android:id="@+id/winterFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/winter_wear" />

        <Button
            android:id="@+id/streetFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/street_style" />

        <Button
            android:id="@+id/nightFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/night_out" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="574dp"
        android:layout_height="189dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:srcCompat="@color/colorAccent"
        tools:layout_editor_absoluteX="-152dp" />
</android.support.constraint.ConstraintLayout>